            "name": "CUDA C++: Test",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/test_build_torch/build/example-app"             
        },
        {
            "name": "CUDA C++: Kernel",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/build/rasterizer"             
        },        
        {
            "name": "CUDA C++: Attach",
            "type": "cuda-gdb",
            "request": "attach"
        },
        {
            "name": "Convert dump",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_data/convert_dump.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },        
